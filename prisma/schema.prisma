// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String

  categories Category[]

  @@map("users")
}

model Category {
  id     Int    @id @default(autoincrement())
  name   String @unique
  color  String
  icon   String
  userId Int

  tasks Task[]
  user  User   @relation(fields: [userId], references: [id])

  @@map("categories")
}

model Day {
  id   Int    @id @default(autoincrement())
  name String

  tasks Task[]

  @@map("days")
}

model Task {
  id         Int     @id @default(autoincrement())
  name       String
  categoryId Int
  checked    Boolean @default(false)

  category Category @relation(fields: [categoryId], references: [id])
  days     Day[]

  @@map("tasks")
}
