generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  Int @id @default(autoincrement())
  name String 
  email String @unique
  password  String
  categories Category[]

  @@map("users")
}

model Category {
  id  Int @id @default(autoincrement())

  user               User                @relation(fields: [userId], references: [id])
  userId  Int
  name String  @unique
  color String 
  icon  String

  @@map("categories")
}